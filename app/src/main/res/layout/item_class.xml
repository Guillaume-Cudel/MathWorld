<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/item_class_color"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/item_class_name"
        app:layout_constraintEnd_toEndOf="@id/item_class_modify_name"
        app:layout_constraintTop_toTopOf="@id/item_class_modify_name"
        app:layout_constraintBottom_toBottomOf="@id/item_class_modify_name"
        android:background="@drawable/round"
        android:backgroundTint="@color/teal_200"/>

    <TextView
        android:id="@+id/item_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:text="Les crapules"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/item_class_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_class_name"
        app:layout_constraintTop_toTopOf="@+id/item_class_name"
        app:layout_constraintBottom_toBottomOf="@id/item_class_name"
        android:layout_marginStart="30dp"
        android:text="@string/_6e"
        android:textSize="15sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/item_class_modify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_class_name"
        app:layout_constraintBottom_toBottomOf="@id/item_class_name"
        android:src="@drawable/ic_baseline_edit_24"
        app:maxImageSize="30dp"
        app:tint="@color/orange"
        android:backgroundTint="@color/teal_200"
        android:outlineProvider="none"
        app:borderWidth="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/item_class_modify_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/item_class_modify_name"
        app:layout_constraintTop_toTopOf="@id/item_class_name"
        app:layout_constraintBottom_toBottomOf="@id/item_class_name"
        android:src="@drawable/ic_baseline_colorize_24"
        app:maxImageSize="30dp"
        app:tint="@color/orange"
        android:backgroundTint="@color/teal_200"
        android:outlineProvider="none"
        app:borderWidth="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
