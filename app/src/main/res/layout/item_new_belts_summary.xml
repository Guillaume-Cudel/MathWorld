<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/new_belts_summary_student_firstname"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Herve"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/new_belts_summary_student_lastname"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_belts_summary_student_firstname"
        app:layout_constraintStart_toStartOf="@id/new_belts_summary_student_firstname"
        android:text="Delacour"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/new_belts_summary_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/new_belts_summary_student_firstname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:text="Score :"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/new_belts_summary_score_image"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/new_belts_summary_score_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="1dp"
        android:background="@drawable/round_job_image_yellow"/>

    <TextView
        android:id="@+id/new_belts_summary_score_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/new_belts_summary_score_image"
        app:layout_constraintEnd_toEndOf="@id/new_belts_summary_score_image"
        app:layout_constraintTop_toTopOf="@id/new_belts_summary_score_image"
        app:layout_constraintBottom_toBottomOf="@id/new_belts_summary_score_image"
        android:textSize="14sp"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@color/teal_200"/>

    <ImageView
        android:id="@+id/new_belts_summary_arrow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/new_belts_summary_score_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="2dp"
        android:src="@drawable/right_arrow"/>

    <ImageView
        android:id="@+id/new_belts_summary_belt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/new_belts_summary_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="3dp"
        android:src="@drawable/black_belt"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/new_belts_summary_xp_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@id/new_belts_summary_belt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_orange"/>

    <TextView
        android:id="@+id/new_belts_summary_xp_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/new_belts_summary_xp_image"
        app:layout_constraintEnd_toEndOf="@id/new_belts_summary_xp_image"
        app:layout_constraintTop_toTopOf="@id/new_belts_summary_xp_image"
        app:layout_constraintBottom_toBottomOf="@id/new_belts_summary_xp_image"
        android:textSize="14sp"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@color/dark_orange"/>


</androidx.constraintlayout.widget.ConstraintLayout>