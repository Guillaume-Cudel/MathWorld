<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/group_ilot_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="40dp"
        android:src="@drawable/travail_en_equipe"/>

    <TextView
        android:id="@+id/group_ilot_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/group_ilot_image"
        app:layout_constraintEnd_toEndOf="@id/group_ilot_image"
        app:layout_constraintTop_toTopOf="@id/group_ilot_image"
        android:layout_marginTop="5dp"
        android:text="1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/orange"/>

    <TextView
        android:id="@+id/group_xp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/group_ilot_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:text="@string/xp_gain_txt"
        android:textSize="20sp"
        android:textColor="@color/dark_orange"
        android:textStyle="bold|italic"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/group_xp_plus_five"
        android:layout_width="60dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toEndOf="@id/group_xp_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:backgroundTint="@android:color/transparent"
        app:strokeColor="#AF6E19"
        app:strokeWidth="3dp"
        app:cornerRadius="8dp"
        android:text="+5"
        android:textSize="13sp"
        android:textColor="@color/dark_orange"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/group_xp_plus_ten"
        android:layout_width="60dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toEndOf="@id/group_xp_plus_five"
        app:layout_constraintTop_toTopOf="@id/group_xp_plus_five"
        android:layout_marginStart="30dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:backgroundTint="@android:color/transparent"
        app:strokeColor="#D59801"
        app:strokeWidth="3dp"
        app:cornerRadius="8dp"
        android:text="+10"
        android:textSize="11sp"
        android:textColor="@color/dark_orange"/>

</androidx.constraintlayout.widget.ConstraintLayout>